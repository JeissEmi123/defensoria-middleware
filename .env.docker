# ============================================
# CONFIGURACIÓN PARA DESARROLLO LOCAL CON DOCKER
# ============================================
# Este archivo es SOLO para desarrollo local
# NO USAR EN PRODUCCIÓN

# Aplicación
APP_NAME=Defensoria Middleware
APP_VERSION=1.0.0
APP_ENV=development
DEBUG=true

# Seguridad - GENERAR NUEVOS VALORES PARA PRODUCCIÓN
SECRET_KEY=dev-secret-key-only-for-local-development-change-in-production
JWT_SECRET_KEY=dev-jwt-secret-key-only-for-local-development-change-in-production
JWT_REFRESH_SECRET_KEY=dev-jwt-refresh-secret-key-only-for-local-development
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Base de Datos - Docker Local
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=defensoria_db
POSTGRES_PORT=5432
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/defensoria_db

# Usuario Admin Inicial - Solo desarrollo
ADMIN_DEFAULT_PASSWORD=Admin123456!

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=json
ENABLE_AUDIT_LOG=true

# CORS - Desarrollo Local
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:3001","http://localhost:9000","http://127.0.0.1:3000","http://127.0.0.1:3001","http://127.0.0.1:9000"]

# Autenticación
LOCAL_AUTH_ENABLED=true
AZURE_AD_ENABLED=false
LDAP_ENABLED=false

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
AUTH_RATE_LIMIT_PER_MINUTE=10

# Configuración de Gmail API - OAuth modo
GMAIL_USE_OAUTH=true
GMAIL_OAUTH_CLIENT_SECRET_FILE=/app/config/client_secret.json
GMAIL_TOKEN_FILE=/app/config/gmail-token.pickle
EMAIL_FROM=jeissonjaviercm.com@gmail.com

# Email del coordinador responsable de las notificaciones de tipo de señal
COORDINADOR_EMAIL=davidv@agatadata.com
