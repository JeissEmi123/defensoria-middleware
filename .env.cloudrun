# Configuración para Cloud Run Production
APP_NAME=Defensoria Middleware
APP_VERSION=1.0.0
APP_ENV=production
DEBUG=false

# Seguridad
SECRET_KEY=${SECRET_KEY}
JWT_SECRET_KEY=${JWT_SECRET_KEY}
JWT_REFRESH_SECRET_KEY=${JWT_REFRESH_SECRET_KEY}
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Base de Datos Cloud SQL
DATABASE_URL=postgresql+asyncpg://app_user:AppUser2026!@/defensoria_db?host=/cloudsql/sat-defensoriapueblo:us-central1:defensoria-db
POSTGRES_USER=app_user
POSTGRES_PASSWORD=AppUser2026!
POSTGRES_DB=defensoria_db
POSTGRES_PORT=5432

# Usuario Admin
ADMIN_DEFAULT_PASSWORD=${ADMIN_DEFAULT_PASSWORD}

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
ENABLE_AUDIT_LOG=true

# CORS
ALLOWED_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=false

# GCP
GCP_PROJECT_ID=sat-defensoriapueblo
GCP_REGION=us-central1

# Autenticación
LOCAL_AUTH_ENABLED=true
AZURE_AD_ENABLED=false
LDAP_ENABLED=false

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
AUTH_RATE_LIMIT_PER_MINUTE=10

# Email Configuration
EMAIL_SERVICE=none
EMAIL_FROM=jcamargom@agatadata.com
COORDINADOR_EMAIL=jcamargom@agatadata.com

# Gmail OAuth (deshabilitado por defecto)
GMAIL_USE_OAUTH=false
GMAIL_TOKEN_FILE=/tmp/config/gmail-token.pickle
GMAIL_OAUTH_CLIENT_SECRET_FILE=/tmp/config/oauth-client-secret.json
GMAIL_SERVICE_ACCOUNT_FILE=/tmp/config/service-account-key.json
